<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/VerticalLinearLayoutTheme"
    android:padding="@dimen/padding_ten"
    tools:context="com.example.saint.aukg.ui.details.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <android.support.v7.widget.CardView style="@style/RelativeWrapTheme">

        <RelativeLayout style="@style/RelativeWrapTheme">

            <ScrollView style="@style/VerticalLinearLayoutTheme">

                <LinearLayout
                    style="@style/VerticalLinearLayoutTheme"
                    android:padding="@dimen/padding_fifteen">

                    <com.example.saint.aukg.ui.fonts.TextFontBold
                        android:id="@+id/textViewHeader"
                        style="@style/VacanciesTextFontBoldTheme"
                        android:text="Header" />

                    <RelativeLayout
                        style="@style/RelativeWrapTheme"
                        android:layout_marginTop="10sp">

                        <FrameLayout
                            android:id="@+id/imageProfile"
                            style="@style/VacanciesFrameImageTheme"
                            android:background="@drawable/ic_profile_name" />

                        <TextView
                            android:id="@+id/textViewProfile"
                            style="@style/VacanciesTextFontLightTheme"
                            android:layout_toEndOf="@id/imageProfile"
                            android:layout_toRightOf="@id/imageProfile"
                            android:text="daniyar.changylov" />

                        <TextView
                            android:id="@+id/textViewDate"
                            style="@style/VacanciesTextDateTheme"
                            android:text="12:53 22 Apr 2018" />
                    </RelativeLayout>

                    <RelativeLayout style="@style/RelativeWrapTheme">

                        <RelativeLayout
                            android:id="@+id/relativeSalary"
                            style="@style/RelativeWrapTheme"
                            android:layout_marginTop="@dimen/margin_fifteen">

                            <FrameLayout
                                android:id="@+id/imageSalary"
                                style="@style/VacanciesFrameImageTheme"
                                android:background="@drawable/ic_salary" />

                            <TextView
                                android:id="@+id/textViewSalary"
                                style="@style/VacanciesTextFontLightTheme"
                                android:layout_toEndOf="@id/imageSalary"
                                android:layout_toRightOf="@id/imageSalary"
                                android:text="fhdskjfhdks" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textViewSiteAddress"
                            style="@style/VacanciesTextSiteTheme"
                            android:text="diesel.elcat.kg" />
                    </RelativeLayout>

                    <RelativeLayout
                        style="@style/RelativeWrapTheme"
                        android:background="@drawable/border_bottom">

                        <RelativeLayout
                            android:id="@+id/relativeCall"
                            style="@style/RelativeWrapTheme"
                            android:layout_marginTop="@dimen/margin_fifteen">

                            <FrameLayout
                                android:id="@+id/imageCall"
                                style="@style/VacanciesFrameImageTheme"
                                android:background="@drawable/ic_telephone_number" />

                            <TextView
                                android:id="@+id/textViewTelephone"
                                style="@style/VacanciesTextFontLightTheme"
                                android:layout_toEndOf="@id/imageCall"
                                android:layout_toRightOf="@id/imageCall"
                                android:text="fhdskjfhdkshfksdjhfskhskfs" />
                        </RelativeLayout>

                        <CheckBox
                            android:id="@+id/checkBoxElected"
                            style="@style/VacanciesCheckBoxTheme" />
                    </RelativeLayout>

                    <com.example.saint.aukg.ui.fonts.TextFontLight
                        android:id="@+id/textViewBody"
                        style="@style/VacanciesTextBodyTheme"
                        android:text="gfskjgdkgfsdk  gfoshfs sfwo hfow hfweofwie fhwo hfo wfhwe ofhwfh wfh oweif hwoeifh owieh fioweh fowei hweo fhowie hffoew ifhw oeifh eiwoh ffow hfieow " />

                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:id="@+id/buttonCall"
                style="@style/VacanciesCallButtonTheme">

                <FrameLayout
                    android:id="@+id/imageCallButton"
                    style="@style/VacanciesCallImageTheme" />

                <TextView style="@style/VacanciesTextCallTheme" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

