<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.saint.aukg.ui.fonts.TextFontBold
        android:id="@+id/textViewRegime"
        style="@style/DialogTextTheme"
        android:text="@string/regime"/>

    <RadioGroup
        android:layout_below="@id/textViewRegime"
        android:id="@+id/radioGroupRegime"
        style="@style/DialogRadioGroupTheme"
        android:weightSum="4">
        <LinearLayout
            style="@style/DialogLinearLayoutTheme">
            <RadioButton
                android:text="@string/any"
                style="@style/DialogRadioButtonTheme"/>

            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/full"/>
            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/flexible"/>
        </LinearLayout>
        <LinearLayout
            style="@style/DialogLinearLayoutTheme">
            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/remotely"/>
            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/night"/>
        </LinearLayout>
    </RadioGroup>

    <com.example.saint.aukg.ui.fonts.TextFontBold
        android:id="@+id/textViewSalary"
        android:layout_below="@id/radioGroupRegime"
        style="@style/DialogTextTheme"
        android:text="@string/salary"/>

    <RadioGroup
        style="@style/DialogRadioGroupTheme"
        android:layout_below="@id/textViewSalary"
        android:weightSum="2.2"
        android:id="@+id/radioGroupSalary">
        <LinearLayout
            style="@style/DialogLinearLayoutTheme">
            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/any" />

            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/five_thousand"/>
        </LinearLayout>
        <LinearLayout
            style="@style/DialogLinearLayoutTheme">
            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/ten_thousand"/>
            <RadioButton
                style="@style/DialogRadioButtonTheme"
                android:text="@string/thirty_thousand"/>
        </LinearLayout>
    </RadioGroup>

    <LinearLayout
        style="@style/DialogLinearLayoutButtonTheme"
        android:layout_below="@id/radioGroupSalary">

        <Button
            android:id="@+id/buttonReset"
            android:text="@string/reset"
            style="@style/DialogButtonTheme" />
        <Button
            android:id="@+id/buttonSearch"
            android:text="@string/search"
            style="@style/DialogButtonTheme"/>
    </LinearLayout>
</RelativeLayout>